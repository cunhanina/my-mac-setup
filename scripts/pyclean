#!/bin/zsh
source ~/bin/_styles.sh

header "ðŸ§¹ Python Deep Clean"

# Find and delete __pycache__ directories
find . -type d -name "__pycache__" -exec rm -rf {} +
echo "  âœ” Deleted __pycache__ folders"

# Find and delete .pyc files (compiled python)
find . -type f -name "*.pyc" -delete
echo "  âœ” Deleted .pyc files"

# Find and delete Mac junk
find . -type f -name ".DS_Store" -delete
echo "  âœ” Deleted .DS_Store files"

ok "Cleaned current directory recursively."
